{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webappname": {
            "type": "string"
        },
        "webappserviceplanname": {
            "type": "string"
        },
        "appinsightsname": {
            "type": "string"
        },
        "rgname": {
            "type": "string"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[parameters('webappname')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('webappserviceplanname'))]"
            ],
            "tags": {
            },
            "properties": {
                "name": "[parameters('webappname')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "-key-goes-here"
                        }
                    ],
                    "linuxFxVersion": "JAVA|8-jre8",
                    "alwaysOn": true
                },
                "serverFarmId": "[concat('/subscriptions/', subscription().subscriptionId ,'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', parameters('webappserviceplanname'))]",
                "hostingEnvironment": "",
                "clientAffinityEnabled": false,
                "httpsOnly" : true
            },
            "identity" : {
                "type" : "SystemAssigned"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-11-01",
            "name": "[parameters('webappserviceplanname')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
            ],
            "tags": {
            },
            "sku": {
                "Tier": "PremiumV2",
                "Name": "P1v2"
            },
            "kind": "linux",
            "properties": {
                "name": "[parameters('webappserviceplanname')]",
                "workerSize": "3",
                "workerSizeId": "3",
                "numberOfWorkers": "1",
                "reserved": true,
                "hostingEnvironment": ""
            }
        },
        {
            "name": "[parameters('appinsightsname')]",
            "type": "Microsoft.Insights/components",
            "apiVersion": "2015-05-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "Application insights for app"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('webappname'))]"
            ],
            "properties": {
                "applicationId": "[resourceId('Microsoft.Web/sites', parameters('webappname'))]",
                "application_Type": "web"
            }
        }
    ],
    "outputs": {
        "webappname": {
            "type": "string",
            "value": "[parameters('webappname')]"
        },
        "webappurl": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Web/sites', parameters('webappname')), '2019-04-01').defaultHostName]"
        },
        "webappidentity": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Web/sites', parameters('webappname')), '2019-04-01').identity.principalId]"
        },
        "webappserviceplanname": {
            "type": "string",
            "value": "[parameters('webappserviceplanname')]"
        },
        "appinsightsname": {
            "type": "string",
            "value": "[parameters('appinsightsname')]"
        },
        "appinsightskey": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Insights/components', parameters('appinsightsname')), '2019-04-01').InstrumentationKey]"
        }
    },
    "functions": [
    ]
}