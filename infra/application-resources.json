{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webappname": {
            "type": "string"
        },
        "webappserviceplanname": {
            "type": "string"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "name": "[parameters('webappname')]",
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "location": "[resourceGroup().location]",
            "tags": {
                "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('webappserviceplanname'))]": "Resource",
                "displayName": "[parameters('webappname')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('webappserviceplanname'))]"
            ],
            "properties": {
                "name": "[parameters('webappname')]",
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('webappserviceplanname'))]",
                "siteConfig": {
                    "appSettings": [],
                    "linuxFxVersion": "JAVA|8-jre8",
                    "alwaysOn": true
                },
                "clientAffinityEnabled": false
            }
        },
        {
            "name": "[parameters('webappserviceplanname')]",
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-11-01",
            "location": "[resourceGroup().location]",
            "kind": "linux",
            "sku": {
                "name": "P1v2",
                "capacity": 1
            },
            "tags": {
                "displayName": "[parameters('webappserviceplanname')]"
            },
            "properties": {
                "name": "[parameters('webappserviceplanname')]"
            }
        }
    ],
    "outputs": {
        "webappname": {
            "type": "string",
            "value": "[parameters('webappname')]"
        },
        "webappserviceplanname": {
            "type": "string",
            "value": "[parameters('webappserviceplanname')]"
        }
    },
    "functions": [
    ]
}