{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webappname": {
            "type": "string"
        },
        "webappserviceplanname": {
            "type": "string"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[parameters('webappname')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('webappserviceplanname'))]"
            ],
            "tags": {
            },
            "properties": {
                "name": "[parameters('webappname')]",
                "siteConfig": {
                    "appSettings": [
                    ],
                    "linuxFxVersion": "JAVA|8-jre8",
                    "alwaysOn": true
                },
                "serverFarmId": "[concat('/subscriptions/', subscription().subscriptionId ,'/resourcegroups/', resourceGroup().name, '/providers/Microsoft.Web/serverfarms/', parameters('webappserviceplanname'))]",
                "hostingEnvironment": "",
                "clientAffinityEnabled": false
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-11-01",
            "name": "[parameters('webappserviceplanname')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
            ],
            "tags": {
            },
            "sku": {
                "Tier": "PremiumV2",
                "Name": "P1v2"
            },
            "kind": "linux",
            "properties": {
                "name": "[parameters('webappserviceplanname')]",
                "workerSize": "3",
                "workerSizeId": "3",
                "numberOfWorkers": "1",
                "reserved": true,
                "hostingEnvironment": ""
            }
        }
    ],
    "outputs": {
        "webappname": {
            "type": "string",
            "value": "[parameters('webappname')]"
        },
        "webappserviceplanname": {
            "type": "string",
            "value": "[parameters('webappserviceplanname')]"
        }
    },
    "functions": [
    ]
}